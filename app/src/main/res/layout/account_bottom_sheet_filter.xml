<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:padding="10dp"
    android:theme="@style/Theme.MaterialComponents.DayNight"
    android:background="@drawable/shape_bottom_sheet">
    <androidx.cardview.widget.CardView
        android:id="@+id/touch_decorator"
        android:layout_width="35dp"
        android:layout_height="5dp"
        app:cardBackgroundColor="?attr/colorOnSurface"
        app:cardCornerRadius="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Фильтры"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@id/touch_decorator"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/text_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отменить"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="15sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        app:layout_constraintBaseline_toBaselineOf="@id/text_title"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="?attr/colorOnSurface"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintStart_toStartOf="parent"/>
    <HorizontalScrollView
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.chip.ChipGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.material.chip.Chip
                android:id="@+id/check_1_course"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                style="@style/MyChip"
                android:text="1 курс"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/check_2_course"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                style="@style/MyChip"
                android:text="2 курс"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/check_3_course"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                style="@style/MyChip"
                android:text="3 курс"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/check_4_course"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                style="@style/MyChip"
                android:text="4 курс"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/check_5_course"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                style="@style/MyChip"
                android:text="5 курс"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/check_6_course"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                style="@style/MyChip"
                android:text="6 курс"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/check_7_course"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                style="@style/MyChip"
                android:text="7 курс"/>
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/form_group"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/group"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_och"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            style="@style/MyChip"
            android:text="Очная форма"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_half_och"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            style="@style/MyChip"
            android:layout_marginTop="5dp"
            android:text="Очно-заочная форма"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_zaoch"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            style="@style/MyChip"
            android:layout_marginTop="5dp"
            android:text="Заочная форма"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/type_group"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/group"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_bak"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            style="@style/MyChip"
            android:text="Бакалавр"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_spec"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            style="@style/MyChip"
            android:layout_marginTop="5dp"
            android:text="Специалист"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_mag"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            style="@style/MyChip"
            android:layout_marginTop="5dp"
            android:text="Магистр"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_asp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            style="@style/MyChip"
            android:layout_marginTop="5dp"
            android:text="Аспирант"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_spo"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            style="@style/MyChip"
            android:layout_marginTop="5dp"
            android:text="СПО"/>
    </LinearLayout>

    <Button
        android:id="@+id/button_apply"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Применить"
        app:cornerRadius="4dp"
        android:layout_marginTop="15dp"
        android:theme="@style/Widget.MaterialComponents.Button"
        app:layout_constraintTop_toBottomOf="@+id/type_group"/>

</androidx.constraintlayout.widget.ConstraintLayout>