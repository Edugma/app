<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/schedule_day_width"
    android:layout_height="@dimen/schedule_day_height"
    android:layout_marginStart="4.5dp"
    android:layout_marginEnd="4.5dp"
    android:background="@drawable/shape_schedule_day"
    android:elevation="3dp"
    android:layout_marginTop="9dp"
    android:orientation="vertical"
    android:paddingTop="8.5dp">

    <TextView
        android:id="@+id/textview_day_of_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1.7dp"
        android:textColor="@color/text_color_secondary"
        android:fontFamily="@font/ubuntu_bold"
        android:textAlignment="center"
        android:textSize="15.0dp"
        tools:text="17" />

    <TextView
        android:id="@+id/textview_day_of_week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7.8dp"
        android:textColor="@color/text_color_secondary"
        android:fontFamily="@font/ubuntu_medium"
        android:textAlignment="center"
        android:textSize="11.2dp"
        tools:text="Пн" />

    <LinearLayout
        android:id="@+id/linearlayout_order_indicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <View
            android:id="@+id/pair1"
            android:layout_width="@dimen/schedule_day_indicator_width"
            android:layout_height="@dimen/schedule_day_indicator_height"
            android:layout_marginStart="@dimen/schedule_day_indicator_margin_start"
            android:layout_marginEnd="@dimen/schedule_day_indicator_margin_end"
            android:background="@drawable/circle2"
            android:backgroundTint="@color/lessonOrder1" />

        <View
            android:id="@+id/pair2"
            android:layout_width="@dimen/schedule_day_indicator_width"
            android:layout_height="@dimen/schedule_day_indicator_height"
            android:layout_marginStart="@dimen/schedule_day_indicator_margin_start"
            android:layout_marginEnd="@dimen/schedule_day_indicator_margin_end"
            android:background="@drawable/circle2"
            android:backgroundTint="@color/lessonOrder2" />

        <View
            android:id="@+id/pair3"
            android:layout_width="@dimen/schedule_day_indicator_width"
            android:layout_height="@dimen/schedule_day_indicator_height"
            android:layout_marginStart="@dimen/schedule_day_indicator_margin_start"
            android:layout_marginEnd="@dimen/schedule_day_indicator_margin_end"
            android:background="@drawable/circle2"
            android:backgroundTint="@color/lessonOrder3" />

        <View
            android:id="@+id/pair4"
            android:layout_width="@dimen/schedule_day_indicator_width"
            android:layout_height="@dimen/schedule_day_indicator_height"
            android:layout_marginStart="@dimen/schedule_day_indicator_margin_start"
            android:layout_marginEnd="@dimen/schedule_day_indicator_margin_end"
            android:background="@drawable/circle2"
            android:backgroundTint="@color/lessonOrder4" />

        <View
            android:id="@+id/pair5"
            android:layout_width="@dimen/schedule_day_indicator_width"
            android:layout_height="@dimen/schedule_day_indicator_height"
            android:layout_marginStart="@dimen/schedule_day_indicator_margin_start"
            android:layout_marginEnd="@dimen/schedule_day_indicator_margin_end"
            android:background="@drawable/circle2"
            android:backgroundTint="@color/lessonOrder5" />

        <View
            android:id="@+id/pair6"
            android:layout_width="@dimen/schedule_day_indicator_width"
            android:layout_height="@dimen/schedule_day_indicator_height"
            android:layout_marginStart="@dimen/schedule_day_indicator_margin_start"
            android:layout_marginEnd="@dimen/schedule_day_indicator_margin_end"
            android:background="@drawable/circle2"
            android:backgroundTint="@color/lessonOrder6" />

        <View
            android:id="@+id/pair7"
            android:layout_width="@dimen/schedule_day_indicator_width"
            android:layout_height="@dimen/schedule_day_indicator_height"
            android:layout_marginStart="@dimen/schedule_day_indicator_margin_start"
            android:layout_marginEnd="@dimen/schedule_day_indicator_margin_end"
            android:background="@drawable/circle2"
            android:backgroundTint="@color/lessonOrder7" />
    </LinearLayout>
</LinearLayout>