<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginStart="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:background="#818289"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

    <LinearLayout

        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingStart="0dp"
            android:paddingEnd="@dimen/lesson_padding_end">
            <FrameLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp">


                <TextView
                    android:id="@+id/textview_lesson_order"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:paddingTop="1dp"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#ffaaaa"
                    android:textSize="17dp"
                    tools:text="3" />
            </FrameLayout>

            <ImageView
                android:visibility="gone"
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop"
                android:tintMode="multiply"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ring" />

            <TextView
                android:visibility="gone"
                android:layout_marginStart="18dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/text_lesson_time123"
                style="@style/ScheduleLessonSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu"
                android:breakStrategy="simple"
                android:clickable="false"
                android:maxLines="1"
                android:text="10:40 - 12:10"
                android:textColor="#9E9EA6"
                android:textSize="14.5dp" />

            <TextView
                android:id="@+id/text_lesson_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="5dp"
                android:layout_weight="0"
                android:drawablePadding="6dp"
                android:ellipsize="end"
                android:fontFamily="@font/ubuntu"
                android:maxLines="1"
                android:text="До начала 3 ч. 30 мин."
                android:textAlignment="textEnd"
                android:textColor="#FF7200"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_lesson"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/lesson_margin_bottom"
            android:clickable="true"
            android:elevation="4dp"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingStart="18dp"
            android:paddingEnd="@dimen/lesson_padding_end"
            android:paddingBottom="@dimen/lesson_padding_bottom">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_schedule_dates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="22 нояб."
                    android:textAlignment="textEnd"
                    android:textColor="@color/textSecondary"
                    android:textSize="14.0sp"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:id="@+id/text_schedule_title"
                style="@style/ScheduleLessonTitle"
                android:fontFamily="@font/ubuntu_medium"
                android:textSize="16.5sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:clickable="false"
                android:ellipsize="end"
                android:hyphenationFrequency="full"
                tools:text="Объектно-ориентированное программирование" />

            <TextView
                android:id="@+id/text_lesson_teachers"
                style="@style/ScheduleLessonSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:breakStrategy="simple"
                android:textColor="#818289"
                app:drawableTint="#818289"
                android:clickable="false"
                android:drawablePadding="@dimen/lesson_drawable_padding"
                android:ellipsize="end"
                android:maxLines="1"
                app:drawableStartCompat="@drawable/ic_lesson_teacher"
                tools:text="Арсентьев Дмитрий Андреевич" />

            <TextView
                android:id="@+id/text_lesson_groups"
                style="@style/ScheduleLessonSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:breakStrategy="simple"
                android:textColor="#818289"
                app:drawableTint="#818289"
                android:clickable="false"
                android:drawablePadding="@dimen/lesson_drawable_padding"
                android:ellipsize="end"
                android:maxLines="1"
                app:drawableStartCompat="@drawable/ic_lesson_group"
                tools:text="181-721, 181-722, 181-723. 181-724, 181-725" />

            <TextView
                android:id="@+id/text_lesson_auditoriums"
                style="@style/ScheduleLessonSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:breakStrategy="simple"
                android:textColor="#818289"
                app:drawableTint="#818289"
                android:clickable="false"
                android:drawablePadding="@dimen/lesson_drawable_padding"
                android:ellipsize="end"
                android:maxLines="1"
                app:drawableStartCompat="@drawable/ic_lesson_location"
                tools:text="Пр2303, Пр2306" />

            <TextView
                android:layout_marginTop="8dp"
                android:textSize="25dp"
                style="@style/TextFeaturesStyle"
                android:id="@+id/text_schedule_features"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:maxLines="1"
                tools:text="Лекция" />


            <TextView
                android:id="@+id/text_lesson_duration"
                style="@style/ScheduleLessonSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:breakStrategy="simple"
                android:clickable="false"
                android:drawablePadding="7dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="2 мес."
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_lesson_date_range" />

            <com.mospolytech.mospolyhelper.features.widget.NoTouchRecyclerView
                android:id="@+id/tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="4"
                tools:itemCount="3"
                tools:listitem="@layout/item_tag"
                android:visibility="gone" />

            <View
                android:id="@+id/view_lessons_separator"
                android:layout_marginTop="13dp"
                android:background="@color/layerTwo"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/textview_another_lessons"
                android:fontFamily="@font/ubuntu"
                android:textSize="15sp"
                android:layout_marginTop="11dp"
                tools:text="Ещё 3 занятия в это время"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
        <TextView

            android:layout_marginStart="18dp"
            android:layout_gravity="top"
            android:id="@+id/text_lesson_time"
            style="@style/ScheduleLessonSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu"
            android:breakStrategy="simple"
            android:clickable="false"
            android:maxLines="1"
            android:layout_marginEnd="10dp"
            android:text="10:40 - 12:10"
            android:textColor="#9E9EA6"
            android:textSize="18dp" />
    </LinearLayout>
</FrameLayout>