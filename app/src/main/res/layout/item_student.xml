<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:orientation="vertical"
    android:layout_marginBottom="1dp"
    app:cardCornerRadius="25dp"
    app:cardBackgroundColor="@color/layerOne"
    android:elevation="3dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/marginCard"
        android:background="?android:selectableItemBackground">
        <TextView
            android:id="@+id/title_student"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/fio"
            android:textColor="@color/predmetcolor"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:layout_marginStart="@dimen/marginCard"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/marginCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/chip_education"
            app:layout_constraintBottom_toBottomOf="@+id/chip_education"/>
        <TextView
            android:id="@+id/dir_spec_student"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginCard"
            android:text="Направление: \nПрофиль:"
            android:layout_marginBottom="@dimen/marginCard"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/textColorPrimary"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chip_education"
            app:layout_constraintEnd_toEndOf="parent"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_group"
            android:text="Группа"
            app:chipIcon="@drawable/ic_id_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dir_spec_student"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_course"
            android:text="Курс"
            app:chipIcon="@drawable/ic_baseline_looks_3_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/chip_group"
            app:layout_constraintTop_toBottomOf="@id/dir_spec_student"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_form"
            android:text="Форма обучения"
            app:chipIcon="@drawable/ic_id_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/chip_course"
            app:layout_constraintTop_toBottomOf="@id/dir_spec_student"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_education"
            android:text="Бакалавр"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>