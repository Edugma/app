<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_schedule_grid"
    android:foreground="?selectableItemBackground"
    android:elevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_schedule_time_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimarySurfaceSecondary"
        android:textColor="?attr/colorOnPrimarySurfaceSecondary"
        android:clickable="false"
        tools:text="пн, 12 сентября"
        android:fontFamily="@font/ubuntu_medium"
        android:paddingStart="4dp"
        android:paddingTop="2dp"
        android:paddingEnd="4dp"
        android:paddingBottom="2dp"
        android:textAlignment="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/text_schedule_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        android:fontFamily="@font/ubuntu"
        android:clickable="false"
        tools:text="2) 10:40-12:10\nЛаб.работа\nОбъектн. ориент. прогр."
        android:paddingStart="4dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:paddingBottom="4dp"
        android:textColor="@color/text_color_primary"
        android:textSize="13sp" />
</LinearLayout>