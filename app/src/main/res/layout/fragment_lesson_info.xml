
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/scheduleBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/toolbar_lesson_info"/>
        <TextView android:layout_width="wrap_content"
            android:textIsSelectable="true"
        android:paddingEnd="6dp"
        android:paddingTop="5dp"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="14dp"
        android:layout_height="wrap_content"
        android:id="@+id/text_schedule_type"
        android:fontFamily="sans-serif-medium"
        android:textSize="16.5sp"/>
        <TextView android:id="@+id/text_schedule_title"
            android:textIsSelectable="true"
            android:layout_marginHorizontal="18dp"
            android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hyphenationFrequency="none"
        android:ellipsize="end"
        android:textColor="@color/textColorPrimary"
        android:breakStrategy="balanced"
        android:paddingBottom="2dp"
        android:textSize="20sp" />
        <TextView
            android:id="@+id/text_schedule_time"
            android:textIsSelectable="true"
            android:drawableStart="@drawable/access_time_24px"
            android:textColor="@color/textLessonInfo"
            android:drawablePadding="15dp"
            android:textSize="17sp"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginEnd="18dp"
            android:layout_marginStart="57dp"
            android:background="@color/allDividerColor"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/text_schedule_auditoriums"
            android:textIsSelectable="true"
            android:drawableStart="@drawable/location_on_24px"
            android:textColor="@color/textLessonInfo"
            android:drawablePadding="18dp"
            android:textSize="17sp"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginEnd="18dp"
            android:layout_marginStart="57dp"
            android:background="@color/allDividerColor"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@id/text_schedule_teachers"
            android:textIsSelectable="true"
            android:drawableStart="@drawable/school_24px"
            android:textColor="@color/textLessonInfo"
            android:drawablePadding="18dp"
            android:textSize="17sp"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginEnd="18dp"
            android:layout_marginStart="57dp"
            android:background="@color/allDividerColor"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/text_schedule_date"
            android:textIsSelectable="true"
            android:drawableStart="@drawable/date_range_24px"
            android:textColor="@color/textLessonInfo"
            android:drawablePadding="18dp"
            android:textSize="17sp"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginEnd="18dp"
            android:layout_marginStart="57dp"
            android:background="@color/allDividerColor"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/text_schedule_group"
            android:textIsSelectable="true"
            android:drawableStart="@drawable/group_24px"
            android:textColor="@color/textLessonInfo"
            android:drawablePadding="18dp"
            android:textSize="17sp"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginEnd="18dp"
            android:layout_marginStart="57dp"
            android:background="@color/allDividerColor"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/text_schedule_deadlines"
            android:textIsSelectable="true"
            android:drawableStart="@drawable/group_24px"
            android:textColor="@color/textLessonInfo"
            android:drawablePadding="18dp"
            android:textSize="17sp"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    </ScrollView>