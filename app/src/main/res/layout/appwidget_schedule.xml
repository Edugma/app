<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_schedule_widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:background="@drawable/shape_widget"
    android:elevation="4dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_lesson_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_stroke"
        android:backgroundTint="#444444"
        android:fontFamily="sans-serif-black"
        android:minHeight="20dp"
        android:paddingHorizontal="4dp"
        android:paddingStart="8dp"
        android:paddingTop="3dp"
        android:paddingEnd="8dp"
        android:paddingBottom="5dp"
        android:text="Пн, 29.08"
        android:textAlignment="center"
        android:textColor="@color/widgetTitleText"
        android:textSize="12sp" />

    <ListView
        android:id="@+id/list_schedule"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="false"
        android:divider="@null"
        android:overScrollMode="never"
        android:scrollbarSize="4dp"
        android:scrollbarThumbVertical="@drawable/shape_scrollbar" />

</LinearLayout>