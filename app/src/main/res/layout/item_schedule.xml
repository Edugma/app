<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/layout_lesson_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape_lesson_time"
            android:clickable="false"
            android:elevation="2dp"
            android:minHeight="50sp">

            <TextView
                android:id="@+id/text_schedule_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:breakStrategy="simple"
                android:fontFamily="sans-serif"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="10:40"
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text_schedule_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:breakStrategy="simple"
                android:fontFamily="sans-serif"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="12:10"
                android:textAlignment="center"
                android:textColor="@color/textLessonHead"
                android:textSize="15sp" />

            <View
                android:id="@+id/lesson_timeline"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|fill_vertical"
                android:background="#ff29b6f6" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/layout_lesson"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:orientation="vertical"
            android:paddingStart="7dp"
            android:paddingTop="5dp"
            android:paddingEnd="7dp"
            android:paddingBottom="7dp">

            <TextView
                android:id="@+id/text_schedule_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.05"
                android:text="ЛАБОРАТОРНА РАБОТА"
                android:textAlignment="textStart"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_schedule_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:breakStrategy="high_quality"
                android:clickable="false"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:hyphenationFrequency="full"
                android:maxLines="3"
                android:paddingBottom="2dp"
                android:text="Объекто-ориентированное программирование"
                android:textColor="@color/accent_text_color"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/text_schedule_teachers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:text="Арсентьев Дмитрий Андреевич"
                android:textColor="@color/secondary_text_color"
                android:textSize="14.5sp" />

            <TextView
                android:id="@+id/text_schedule_auditoriums"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="пр2303, пр2306"
                android:textSize="15.5sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/lesson_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:clickable="false"
        android:drawableStart="@drawable/ic_round_local_cafe_24"
        android:drawablePadding="10dp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.06"
        android:paddingStart="15dp"
        android:paddingTop="7dp"
        android:paddingEnd="5dp"
        android:paddingBottom="10dp"
        android:text="окно в 1 час 50 минут"
        android:textColor="@color/textLessonHead"
        android:textSize="14sp" />

</LinearLayout>