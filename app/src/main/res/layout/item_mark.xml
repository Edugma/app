<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:orientation="vertical"
    android:layout_marginBottom="1dp"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/defaultCardColor">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/marginCard"
        android:background="?android:selectableItemBackground">
            <TextView
                android:id="@+id/title_predmet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                android:text="@string/marks"
                android:textColor="@color/predmetcolor"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:textSize="20sp"
                android:layout_marginStart="@dimen/marginCard"
                android:ellipsize="end"
                android:layout_marginBottom="@dimen/marginCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/mark_layout"/>

        <TextView
            android:id="@+id/type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginCard"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="@dimen/marginCard"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="5"
            android:text="@string/marks"
            android:textColor="@color/textColorPrimary"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/mark_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_predmet" />
            <FrameLayout
                android:id="@+id/mark_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:minHeight="30dp"
                android:minWidth="30dp"
                android:maxWidth="70dp"
                android:maxHeight="70dp"
                android:background="@drawable/round_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:elevation="7dp">
                <TextView
                    android:id="@+id/mark"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="15sp"
                    android:text="@string/marks"
                    android:layout_gravity="center"/>
            </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>