<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:orientation="vertical"
    android:layout_marginBottom="1dp"
    app:cardCornerRadius="4dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/marginCard"
        android:background="?android:selectableItemBackground">
        <RadioButton
            android:id="@+id/deadline_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/deadline_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/predmetSample"
            android:maxLines="1"
            android:textColor="@color/predmetcolor"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            android:layout_marginStart="@dimen/marginCard"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/marginCard"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/deadline_completed"/>
        <TextView
            android:id="@+id/deadline_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:text="@string/zadSample"
            android:textColor="@color/text_color_primary"
            android:layout_marginEnd="20dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="15sp"
            android:layout_marginStart="@dimen/marginCard"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/marginCard"
            app:layout_constraintTop_toBottomOf="@id/deadline_name"
            app:layout_constraintStart_toEndOf="@id/deadline_completed"/>
        <TextView
            android:id="@+id/deadline_pinned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_push_pin_24px"
            android:visibility="invisible"
            android:adjustViewBounds="true"
            android:contentDescription="@string/pinnedImage"
            app:layout_constraintStart_toEndOf="@id/deadline_completed"
            app:layout_constraintBottom_toBottomOf="@id/deadline_date"
            tools:visibility="visible"/>
        <TextView
            android:id="@+id/deadline_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dataSample"
            android:fontFamily="sans-serif-medium"
            android:textSize="13sp"
            android:textColor="@color/textColorDate"
            android:layout_marginStart="@dimen/marginCard"
            app:drawableStartCompat="@drawable/ic_access_alarm_black_24dp"
            android:drawablePadding="5dp"
            app:layout_constraintTop_toBottomOf="@id/deadline_description"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>