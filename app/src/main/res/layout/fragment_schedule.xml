<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorLevelZero"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@drawable/shape_schedule_toolbar"
            app:contentScrim="@color/colorLevelTwo"
            app:titleEnabled="true"
            app:collapsedTitleGravity="center_horizontal"
            app:collapsedTitleTextAppearance="@style/CollapsedTextAppearance"
            app:expandedTitleGravity="top|center_horizontal"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:expandedTitleTextAppearance="@style/ExpandedTextAppearance">
            <TextView
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"
                android:text="4 пары\nСейчас 5-е занятие"
                android:textColor="@color/textScheduleDay"
                android:gravity="bottom|center_horizontal"
                android:layout_marginBottom="60dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16dp"/>
            <com.google.android.material.appbar.MaterialToolbar
                app:title="Понедельник, 21 июл."
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                app:layout_collapseMode="pin"
                android:layout_height="28dp" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/schedule_update"
        android:layout_width="match_parent"
        app:behavior_overlapTop="55dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent">
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <include layout="@layout/bottom_app_bar_schedule" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>