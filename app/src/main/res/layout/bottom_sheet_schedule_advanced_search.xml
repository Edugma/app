<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@drawable/shape_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/view2"
            android:layout_width="35dp"
            android:layout_height="5dp"
            android:background="@drawable/shape_swipe_indicator" />


        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="24dp"
            android:id="@+id/textview_schedule_status"
            android:textColor="#878998"
            android:textSize="15sp"
            android:breakStrategy="balanced"
            android:fontFamily="@font/ubuntu_medium"
            android:text="Расписание не обновлялось 5 дней"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_round_info_24"
            android:layout_marginBottom="14dp"
            android:drawablePadding="6dp"
            app:drawableTint="#CF4B4B" />

        <ProgressBar
            android:layout_marginHorizontal="24dp"
            android:visibility="gone"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="10000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginHorizontal="24dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:visibility="gone"
                android:id="@+id/textview_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 %"
                android:textAlignment="center"
                android:textColor="@color/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:visibility="gone"
                android:id="@+id/button_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/cancel"
                android:textColor="@color/colorSecondary"
                android:textSize="16sp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/ButtonStyle"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="18dp"
            android:id="@+id/button_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/download_schedules"
            android:textColor="@color/accent_text_color" />

        <TextView
            android:id="@+id/textview_lesson_titles_label"
            style="@style/TextH1Style"
            android:textColor="#C9CCE1"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="8dp"
            android:text="Предметы"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/TextFeaturesStyle"
            android:visibility="gone"
            android:id="@+id/textview_lesson_titles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="15dp"

            android:maxLines="5"
            tools:text="@string/all_subjects" />

        <TextView
            android:id="@+id/textview_lesson_types_label"
            style="@style/TextH1Style"
            android:textColor="#C9CCE1"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="8dp"
            android:text="Типы занятий"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/TextFeaturesStyle"
            android:visibility="gone"
            android:id="@+id/textview_lesson_types"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="15dp"
            android:ellipsize="end"
            android:maxLines="5"
            tools:text="@string/all_lesson_types" />

        <TextView
            android:id="@+id/textview_teachers_label"
            style="@style/TextH1Style"
            android:textColor="#C9CCE1"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="8dp"
            android:text="Преподаватели"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/TextFeaturesStyle"
            android:visibility="gone"
            android:id="@+id/textview_teachers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="15dp"
            android:ellipsize="end"
            android:maxLines="5"
            tools:text="@string/all_teachers" />

        <TextView
            android:id="@+id/textview_groups_label"
            style="@style/TextH1Style"
            android:textColor="#C9CCE1"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="8dp"
            android:text="Группы"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/TextFeaturesStyle"
            android:visibility="gone"
            android:id="@+id/textview_groups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="15dp"
            android:ellipsize="end"
            android:maxLines="5"
            tools:text="@string/all_groups" />

        <TextView
            android:id="@+id/textview_auditoriums_label"
            android:visibility="gone"
            style="@style/TextH1Style"
            android:textColor="#C9CCE1"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="8dp"
            android:text="Аудитории"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/TextFeaturesStyle"
            android:visibility="gone"
            android:id="@+id/textview_auditoriums"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="15dp"
            android:ellipsize="end"
            android:maxLines="5"
            tools:text="@string/all_auditoriums" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/ButtonStyle"
            android:visibility="gone"
            android:id="@+id/button_apply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="12dp"
            android:text="@string/apply"
            android:textColor="@color/textAccent" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>