<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    app:cardBackgroundColor="@color/layerOne"
    android:layout_marginBottom="1dp"
    android:elevation="1dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:selectableItemBackground"
        android:padding="7dp">
        <ImageView
            android:id="@+id/avatar_teacher"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/title_teacher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/fio"
            android:textColor="@color/text_color_primary"
            android:textStyle="bold"
            android:fontFamily="@font/ubuntu"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@+id/avatar_teacher"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/info_teacher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            tools:text="Инфо"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:fontFamily="@font/ubuntu"
            android:layout_marginEnd="5dp"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/avatar_teacher"
            app:layout_constraintTop_toBottomOf="@+id/title_teacher"
            app:layout_constraintEnd_toEndOf="parent"/>
        <FrameLayout
            android:id="@+id/status_teacher"
            android:layout_width="17dp"
            android:layout_height="17dp"
            app:layout_constraintEnd_toEndOf="@+id/avatar_teacher"
            android:background="@drawable/round_online"
            app:layout_constraintBottom_toBottomOf="@id/avatar_teacher"
            android:elevation="3dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>