<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false">

    <LinearLayout
        android:id="@+id/layout_lesson"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_lesson"
        android:clickable="true"
        android:elevation="2dp"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="7dp"
        android:paddingEnd="20dp"
        android:paddingBottom="14dp">

        <TextView
            android:id="@+id/text_lesson_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:breakStrategy="simple"
            android:clickable="false"
            android:ellipsize="end"
            android:fontFamily="@font/manrope_semi_bold"
            android:maxLines="1"
            android:text="16:10 - 17:40, 2-е занятие"
            android:textAlignment="center"
            android:textColor="@color/textLessonHead"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_schedule_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:breakStrategy="high_quality"
            android:clickable="false"
            android:ellipsize="end"
            android:fontFamily="@font/manrope_medium"
            android:hyphenationFrequency="full"
            android:paddingBottom="2dp"
            android:text="Объектно-ориентированное программирование"
            android:textColor="@color/accent_text_color"
            android:textSize="10.5sp" />

        <TextView
            android:id="@+id/text_lesson_teachers_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:breakStrategy="simple"
            android:clickable="false"
            android:drawableStart="@drawable/school_24px"
            android:drawablePadding="8dp"
            android:drawableTint="@color/secondary_text_color"
            android:ellipsize="end"
            android:fontFamily="@font/manrope_medium"
            android:maxLines="1"
            android:text="Арсентьев Дмитрий Андреевич"
            android:textColor="@color/secondary_text_color"
            android:textSize="14.3sp" />

        <TextView
            android:id="@+id/text_lesson_auditoriums_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:breakStrategy="simple"
            android:clickable="false"
            android:drawableStart="@drawable/location_on_24px"
            android:drawablePadding="8dp"
            android:drawableTint="@color/secondary_text_color"
            android:ellipsize="end"
            android:fontFamily="@font/manrope_medium"
            android:maxLines="1"
            android:text="пр2303, пр2306"
            android:textColor="@color/secondary_text_color"
            android:textSize="14.3sp" />

    </LinearLayout>
</FrameLayout>