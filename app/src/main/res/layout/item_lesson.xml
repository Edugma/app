<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_lesson"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3.3dp"
        android:layout_marginStart="@dimen/lesson_margin_start"
        android:layout_marginEnd="@dimen/lesson_margin_end"
        android:layout_marginBottom="@dimen/lesson_margin_bottom"
        android:background="@drawable/shape_lesson"
        android:clickable="true"
        android:elevation="4dp"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingStart="@dimen/lesson_padding_start"
        android:paddingTop="@dimen/lesson_padding_top"
        android:paddingEnd="@dimen/lesson_padding_end"
        android:paddingBottom="@dimen/lesson_padding_bottom">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#818289"
                android:textSize="12.6sp"
                android:fontFamily="@font/ubuntu_medium"
                android:id="@+id/textview_lesson_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:maxLines="1"
                tools:text="Лекция" />

            <TextView
                android:textColor="#818289"
                android:textSize="12.6sp"
                android:fontFamily="@font/ubuntu_medium"
                android:id="@+id/text_schedule_dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:layout_gravity="end"
                android:maxLines="1"
                android:textAlignment="textEnd"
                tools:text="4 мес." />

        </FrameLayout>

        <TextView
            android:id="@+id/textview_lesson_title"
            style="@style/ScheduleLessonTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.6dp"
            android:layout_marginBottom="10.3dp"
            android:clickable="false"
            android:ellipsize="end"
            android:hyphenationFrequency="full"
            tools:text="Объектно-ориентированное программирование" />

        <TextView
            android:id="@+id/text_lesson_teachers"
            style="@style/ScheduleLessonSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7.1dp"
            android:breakStrategy="simple"
            android:textColor="#818289"
            app:drawableTint="#818289"
            android:clickable="false"
            android:drawablePadding="@dimen/lesson_drawable_padding"
            android:ellipsize="end"
            android:maxLines="1"
            app:drawableStartCompat="@drawable/ic_fluent_hat_graduation_20_regular"
            tools:text="Арсентьев Дмитрий Андреевич" />

        <TextView
            android:id="@+id/text_lesson_groups"
            style="@style/ScheduleLessonSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7.1dp"
            android:breakStrategy="simple"
            android:textColor="#818289"
            app:drawableTint="#818289"
            android:clickable="false"
            android:drawablePadding="@dimen/lesson_drawable_padding"
            android:ellipsize="end"
            android:maxLines="1"
            app:drawableStartCompat="@drawable/ic_fluent_people_20_regular"
            tools:text="181-721, 181-722, 181-723. 181-724, 181-725" />

        <TextView
            android:id="@+id/text_lesson_auditoriums"
            style="@style/ScheduleLessonSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7.1dp"
            android:breakStrategy="simple"
            android:textColor="#818289"
            app:drawableTint="#818289"
            android:clickable="false"
            android:drawablePadding="@dimen/lesson_drawable_padding"
            android:ellipsize="end"
            android:maxLines="1"
            app:drawableStartCompat="@drawable/ic_fluent_location_20_regular"
            tools:text="Пр2303, Пр2306" />

        <TextView
            android:id="@+id/tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            style="@style/TextFeaturesStyle"
            android:textSize="28.2sp"
            android:visibility="gone" />

    </LinearLayout>
</FrameLayout>