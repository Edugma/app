<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="@dimen/lesson_margin_start"
            android:layout_marginEnd="@dimen/lesson_margin_end"
            android:layout_marginBottom="5dp"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingStart="@dimen/lesson_padding_start"
            android:paddingEnd="@dimen/lesson_padding_end">
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/text_lesson_time"
                style="@style/ScheduleLessonSubtitle"
                android:drawablePadding="@dimen/lesson_drawable_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu"
                android:clickable="false"
                android:maxLines="1"
                android:text="10:40 - 12:10"
                android:textColor="#9E9EA6"
                android:textSize="16dp"
                app:drawableStartCompat="@drawable/ring"
                app:drawableTintMode="multiply" />

            <TextView
                android:id="@+id/text_lesson_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="5dp"
                android:layout_weight="0"
                android:drawablePadding="6dp"
                android:ellipsize="end"
                android:fontFamily="@font/ubuntu"
                android:maxLines="1"
                android:text="До начала 3 ч. 30 мин."
                android:textAlignment="textEnd"
                android:textColor="#FF7200"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_lesson"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/lesson_margin_start"
            android:layout_marginEnd="@dimen/lesson_margin_end"
            android:layout_marginBottom="@dimen/lesson_margin_bottom"
            android:background="@drawable/shape_lesson"
            android:clickable="true"
            android:elevation="4dp"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingStart="@dimen/lesson_padding_start"
            android:paddingTop="@dimen/lesson_padding_top"
            android:paddingEnd="@dimen/lesson_padding_end"
            android:paddingBottom="@dimen/lesson_padding_bottom">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#818289"
                    android:textSize="12.8sp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:id="@+id/text_schedule_features"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:maxLines="1"
                    tools:text="Лекция" />

                <TextView
                    android:textColor="#818289"
                    android:textSize="12.8sp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:id="@+id/text_schedule_dates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:layout_gravity="end"
                    android:maxLines="1"
                    android:textAlignment="textEnd"
                    tools:text="4 мес." />

            </FrameLayout>

            <TextView
                android:id="@+id/text_schedule_title"
                style="@style/ScheduleLessonTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.8dp"
                android:clickable="false"
                android:ellipsize="end"
                android:hyphenationFrequency="full"
                tools:text="Объектно-ориентированное программирование" />

            <TextView
                android:id="@+id/text_lesson_teachers"
                style="@style/ScheduleLessonSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:breakStrategy="simple"
                android:textColor="#818289"
                app:drawableTint="#818289"
                android:clickable="false"
                android:drawablePadding="@dimen/lesson_drawable_padding"
                android:ellipsize="end"
                android:maxLines="1"
                app:drawableStartCompat="@drawable/ic_fluent_hat_graduation_20_regular"
                tools:text="Арсентьев Дмитрий Андреевич" />

            <TextView
                android:id="@+id/text_lesson_groups"
                style="@style/ScheduleLessonSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7.5dp"
                android:breakStrategy="simple"
                android:textColor="#818289"
                app:drawableTint="#818289"
                android:clickable="false"
                android:drawablePadding="@dimen/lesson_drawable_padding"
                android:ellipsize="end"
                android:maxLines="1"
                app:drawableStartCompat="@drawable/ic_fluent_people_20_regular"
                tools:text="181-721, 181-722, 181-723. 181-724, 181-725" />

            <TextView
                android:id="@+id/text_lesson_auditoriums"
                style="@style/ScheduleLessonSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7.5dp"
                android:breakStrategy="simple"
                android:textColor="#818289"
                app:drawableTint="#818289"
                android:clickable="false"
                android:drawablePadding="@dimen/lesson_drawable_padding"
                android:ellipsize="end"
                android:maxLines="1"
                app:drawableStartCompat="@drawable/ic_fluent_location_20_regular"
                tools:text="Пр2303, Пр2306" />


            <TextView
                android:id="@+id/text_lesson_duration"
                style="@style/ScheduleLessonSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:breakStrategy="simple"
                android:clickable="false"
                android:drawablePadding="7dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="2 мес."
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_lesson_date_range" />

            <com.mospolytech.mospolyhelper.features.widget.NoTouchRecyclerView
                android:id="@+id/tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="4"
                tools:itemCount="3"
                tools:listitem="@layout/item_tag"
                android:visibility="gone" />

            <View
                android:id="@+id/view_lessons_separator"
                android:layout_marginTop="13dp"
                android:background="@color/layerTwo"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/textview_another_lessons"
                android:fontFamily="@font/ubuntu"
                android:textSize="15sp"
                android:layout_marginTop="11dp"
                tools:text="Ещё 3 занятия в это время"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>