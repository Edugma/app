<resources>
    <style name="ButtonStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:minHeight">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12.5sp</item>
        <item name="android:paddingBottom">14sp</item>
        <item name="android:background">@drawable/shape_button</item>
    </style>

    <style name="TextH1Style">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="TextFeaturesStyle">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">95dp</item>
        <item name="android:theme">@style/Theme.MaterialComponents.DayNight</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="BottomSheet" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:background">@drawable/shape_bottom_sheet</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" >
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>
    </style>



    <style name="AppTheme.BottomSheetDialog" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog"/>

    <style name="CustomBottomSheetDialogTheme" parent="AppTheme.BottomSheetDialog">
        <item name="colorPrimary">@color/blue</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@color/layerOne</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/BottomSheetDialog</item>
    </style>

    <style name="BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="CustomDialogTheme">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/layerZero</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="LessonInfoDialogTheme" parent="CustomDialogTheme">
        <item name="android:navigationBarColor">@color/layerZero</item>
        <item name="android:statusBarColor">@color/layerTwo</item>
    </style>


    <style name="Dialog.Theme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="TabLayoutAddresses" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">32dp</item>
        <item name="tabIndicatorGravity">center</item>
        <item name="tabBackground">@null</item>
        <item name="tabRippleColor">#00000000</item>
        <item name="tabIndicatorColor">@color/colorLevelThree</item>
        <item name="tabIndicator">@drawable/background_tab_indicator_schedule_type</item>
        <item name="tabPaddingStart">15dp</item>
        <item name="tabPaddingEnd">15dp</item>
        <item name="tabTextAppearance">@style/TabLayoutAddressesTextAppearance</item>
    </style>

    <style name="TabLayoutAddressesTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">13dp</item>
        <item name="fontFamily">@font/ubuntu_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/addresses_tab_selector</item>
    </style>

    <style name="TabLayoutSchedule" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorGravity">center</item>
        <item name="tabIndicatorHeight">@dimen/schedule_tab_indicator_height</item>
        <item name="tabBackground">@drawable/background_tab_schedule</item>
        <item name="tabRippleColor">#00000000</item>
        <item name="tabIndicatorColor">@color/layerTwo</item>
        <item name="tabIndicator">@drawable/background_tab_indicator_schedule</item>
        <item name="tabPaddingStart">1dp</item>
        <item name="tabPaddingEnd">1dp</item>
        <item name="tabTextAppearance">@style/TabLayoutScheduleTextAppearance</item>
    </style>
    <style name="TabLayoutScheduleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14dp</item>
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ScheduleLessonTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">17.2sp</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textColor">@color/text_color_surface_accent</item>
        <item name="android:breakStrategy">simple</item>
        <item name="android:lineSpacingMultiplier">@dimen/text_line_spacing</item>
    </style>

    <style name="ScheduleLessonSubtitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14.3sp</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:drawableTint">@color/secondary_text_color</item>
    </style>

    <style name="ScheduleLessonTime" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textColor">@color/lessonTimeText</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="colorPrimary">@color/color_secondary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="ButtonGroup">
        <item name="colorPrimary">@color/color_secondary</item>
    </style>

    <style name="ShapeAppearanceOverlayChip" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="MyChip" parent="Base.Widget.MaterialComponents.Chip">
        <item name="android:focusable">true</item>
        <item name="closeIconVisible">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="android:clickable">true</item>
        <item name="android:checkable">true</item>
        <item name="android:textColor">@color/textAccent</item>
        <item name="chipBackgroundColor">@color/main_menu_text</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlayChip</item>
        <item name="ensureMinTouchTargetSize">false</item>
        <item name="chipMinHeight">40dp</item>
        <item name="android:textAlignment">center</item>
        <item name="chipStartPadding">0dp</item>
    </style>

</resources>