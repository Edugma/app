<resources>

  <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorOnPrimary">@color/textColorPrimary</item>
    <item name="colorOnSurface">@color/textColorPrimary</item>
    <item name="android:statusBarColor">@color/colorLevelZero</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorSecondary">@color/colorSecondary</item>
    <item name="colorAccent">@color/colorSecondary</item>
    <item name="android:colorEdgeEffect">@color/colorSecondary</item>
    <item name="preferenceTheme">@style/AppTheme.PreferenceThemeOverlay</item>
    <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
    <item name="android:navigationBarColor">#0C0C0C</item>
    <item name="android:windowLightStatusBar">true</item>
    <item name="android:datePickerDialogTheme">@style/Dialog.Theme</item>
    <item name="android:timePickerDialogTheme">@style/Dialog.Theme</item>
  </style>
  <style name="AppTheme.ActionBar">
    <item name="background">@color/colorPrimaryLight</item>
  </style>

  <style name="AppTheme.NavigationMenu">
    <item name="colorPrimary">@color/colorSecondary</item>
  </style>

  <style name="AppTheme.PreferenceThemeOverlay" parent="@style/PreferenceThemeOverlay">
    <item name="android:layout">@layout/fragment_settings</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <!--<item name="android:statusBarColor">@android:color/transparent</item>-->
  </style>

  <style name="AppTheme.Splash">
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">false</item>
    <item name="android:windowTranslucentStatus">true</item>
    <item name="android:windowTranslucentNavigation">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowActionBar">true</item>
    <item name="android:windowLightStatusBar">false</item>
  </style>

  <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
    <item name="android:layout_width">95dp</item>
    <item name="android:theme">@style/Theme.MaterialComponents.DayNight</item>
    <item name="android:textAlignment">center</item>
  </style>

  <style name="BottomSheet" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
    <item name="android:background">@drawable/shape_bottom_sheet</item>
  </style>

  <style name="BaseBottomSheetDialog" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
    <item name="android:windowIsFloating">false</item>
    <item name="bottomSheetStyle">@style/BottomSheet</item>
  </style>

  <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" >
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
  </style>

  <style name="Dialog.Theme" parent="ThemeOverlay.MaterialComponents.Dialog">
    <item name="colorPrimary">@color/textColorPrimary</item>
  </style>

  <style name="ScheduleToolbarText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textSize">32sp</item>
    <item name="android:fontFamily">@font/open_sans_light</item>
  </style>

  <style name="ScheduleToolbarSubtitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
    <item name="android:textSize">18sp</item>
    <item name="android:fontFamily">@font/open_sans_light</item>
  </style>

  <style name="TabLayoutAddresses" parent="Widget.Design.TabLayout">
    <item name="tabIndicatorHeight">@dimen/addresses_tab_height</item>
    <item name="tabIndicatorGravity">center</item>
    <item name="tabBackground">@null</item>
    <item name="tabRippleColor">#00000000</item>
    <item name="tabIndicatorColor">@color/colorLevelTwo</item>
    <item name="tabIndicator">@drawable/background_tab_indicator_addresses</item>
    <item name="tabPaddingStart">14dp</item>
    <item name="tabPaddingEnd">14dp</item>
    <item name="tabTextAppearance">@style/TabLayoutAddressesTextAppearance</item>
  </style>

  <style name="TabLayoutAddressesTextAppearance" parent="TextAppearance.AppCompat">
    <item name="android:textSize">@dimen/addresses_tab_text_size</item>
    <item name="fontFamily">@font/open_sans_bold</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@color/addresses_tab_selector</item>
  </style>

  <style name="ScheduleLessonTitle" parent="TextAppearance.AppCompat">
    <item name="android:textSize">17sp</item>
    <item name="android:fontFamily">@font/open_sans</item>
    <item name="android:textColor">@color/accent_text_color</item>
    <item name="android:breakStrategy">simple</item>
  </style>

  <style name="ScheduleLessonSubtitle" parent="TextAppearance.AppCompat">
    <item name="android:textSize">14.8sp</item>
    <item name="android:fontFamily">@font/open_sans</item>
    <item name="android:textColor">@color/secondary_text_color</item>
    <item name="android:drawableTint">@color/secondary_text_color</item>
  </style>

  <style name="ScheduleLessonTime" parent="TextAppearance.AppCompat">
    <item name="android:textSize">12.5sp</item>
    <item name="android:fontFamily">@font/open_sans_semibold</item>
    <item name="android:textColor">@color/textLessonHead</item>
    <item name="android:textAlignment">center</item>
  </style>

</resources>